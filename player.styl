body
    color pink
    padding 0
    margin 0

.DistributedDubStepPlayer
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    display flex
    flex-direction column

    .mask
        margin auto
        margin-top 100px
        height 60%
        width 60%
        position relative

        .trooper
            position absolute
            width 100%
            width 100%
            z-index 10
            background-color red
            transform translateY(-500px)

        .baby
            position absolute
            width 100%
            width 100%
            z-index 9

    .instrument
        margin auto
        height 40%
        width 40%

        &.bass
            transform rotate(45deg)
            svg
                margin-top -30%
                margin-left -30%
                width 130%

    .shakeDelta
        width 100px
        height 100px
        margin-top 50px
        font-size 60em

